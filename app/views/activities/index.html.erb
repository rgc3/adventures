<div id="main-container" class="container">

      <div class="row">
        <div id="sidebar" class="col-xs-6">
          <div class ="headr">
            <h1>Activities</h1>
          </div>
        </div>

        <div id="content" class="col-xs-6">
          <table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Cost</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.id %></td>
        <td><%= activity.name %></td>
        <td><%= activity.cost %></td>
        <td><%= activity.duration %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Activity', new_activity_path %>

<br>
<br>

          <div>
          <% @images.each do |photo| %>
            <%= image_tag photo, width: 200, height: 125; %>
          <% end %>
          </div>
        </div>
      </div>
    </div>







